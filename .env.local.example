# Supabase (required)
NEXT_PUBLIC_SUPABASE_URL=your-project-url.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key

# NextAuth (required)
NEXTAUTH_SECRET=your-nextauth-secret-min-32-chars
NEXTAUTH_URL=http://localhost:3000

# Dev Login (for local testing)
DEV_LOGIN_ENABLED=1

# LLM Provider (optional - defaults to mock mode)
LLM_PROVIDER=auto
LLM_MODEL=gpt-4o-mini
OPENAI_API_KEY=
ANTHROPIC_API_KEY=
TOGETHER_API_KEY=

# Credits & Metering
FREE_MONTHLY_CREDITS=10000
EBOOK_OUTLINE_CREDITS=1000
EBOOK_CHAPTER_CREDITS=500
EXPORT_PDF_CREDITS=50
EXPORT_EPUB_CREDITS=50
EXPORT_DOCX_CREDITS=50

# Stripe (optional)
STRIPE_SECRET_KEY=
STRIPE_WEBHOOK_SECRET=
STRIPE_PRICE_PRO_MONTH=
STRIPE_PRICE_SCALE_MONTH=
STRIPE_PORTAL_RETURN_URL=http://localhost:3000/billing

# PayPal (optional)
PAYPAL_CLIENT_ID=
PAYPAL_CLIENT_SECRET=

# Currency
BILLING_CURRENCY=USD

# ==== Admins (free usage bypass) ====
FREE_ADMIN_BYPASS=1
ADMIN_EMAILS=you@yourdomain.com,cofounder@yourdomain.com

# ==== Dashboard integration (SSO + wallet linking) ====
# Shared secret with your central dashboard (keep private, rotate if leaked)
SHARED_DASHBOARD_SECRET=replace_me_with_long_random_string
# Public URL where this app is deployed (used in manifest links)
APP_PUBLIC_URL=http://localhost:3000
# Allow requests from dashboard origin(s) for CORS
DASHBOARD_ALLOWED_ORIGINS=https://craudiovizai-dev.netlify.app
